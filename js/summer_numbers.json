{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 250,
    "data": {
        "url": "https://raw.githubusercontent.com/mattuser12/3179/main/data/Summer%20Olympics%20sport.csv"
    },
    "title": "Summer Olympics Participant Counts",
    "mark": "rect",
    "encoding": {
        "y": {
            "field": "Sport",
            "type": "nominal",
            "sort": {"field": "Player_Count", "op": "count", "order": "descending"}
        },
        "x": {
            "field": "Year",
            "type": "ordinal"
        },
        "color": {
            "aggregate": "mean",
            "field": "Player_Count",
            "title": "Player Count",
            "scale": {
                "range": ["#b08d74", "#471c0e"]
            }
        },
        "tooltip": [
            {
                "field": "Player_Count",
                "type": "quantitative",
                "title": "No. of Participants"
            },
            {
                "field": "Sport",
                "type": "nominal",
                "title": "Sport"
            },
            {
                "field": "Year",
                "type": "ordinal",
                "title": "Year"
            },
            {
                "field": "City",
                "type": "nominal",
                "title": "Games Location"
            }
        ]
    },
    "transform": [
        {
            "filter": "datum.Sport == 'Athletics' || datum.Sport == 'Swimming' || datum.Sport == 'Football' || datum.Sport == 'Fencing' || datum.Sport == 'Wrestling' || datum.Sport == 'Wrestling' || datum.Sport == 'Shooting' || datum.Sport == 'Rowing' || datum.Sport == 'Cycling' || datum.Sport == 'Gymnastics' || datum.Sport == 'Sailing'"
        }
    ],
    "config": {
        "axis": {
            "grid": true,
            "tickBand": "extent",
            "labelFontSize": 12, 
            "titleFontSize": 16
        },
        "background": "#e8f4f8",
        "font": "Helvetica",
        "title": {
            "font": "Helvetica",
            "fontSize": 20,
            "color": "black"
        }
    }
}
