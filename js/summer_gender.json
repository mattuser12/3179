{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 650,
    "height": 400,
    "title": {
        "text": "Tokyo 2021 Olympics Gender Breakdown",
        "fontSize": 24
    },
    "data": {
        "url": "https://raw.githubusercontent.com/mattuser12/3179/main/data/Summer%20Ratio.csv"
    },
    "mark": "bar",
    "transform": [
        {
            "calculate": "datum.Female Ratio* -1",
            "as": "FemaleCountNegative"
        }
    ],
    "encoding": {
        "x": {
            "field": "Discipline",
            "type": "ordinal",
            "title": "Sport",
            "sort": "ascending"
        },
        "y": {
            "field": "Male Ratio",
            "type": "quantitative",
            "title": "% of Athletes Male"
        },
        "y2": {
            "field": "FemaleCountNegative",
            "type": "quantitative",
            "title": "% of Athletes Female"
        },
        "order": {
            "aggregate": "sum",
            "field": "Total",
            "type": "quantitative"
        },
        "opacity": {
            "condition": {
                "param": "highlight",
                "value": 0.6
            },
            "value": 0.2
        },
        "tooltip": [
            {
                "field": "Discipline",
                "type": "nominal",
                "title": "Sport"
            },
            {
                "field": "Male_Ratio",
                "type": "quantitative",
                "title": "% of Athletes Male"
            },
            {
                "field": "Female_Ratio",
                "type": "quantitative",
                "title": "% of Athletes Female"
            },
            {
                "field": "Category",
                "type": "nominal",
                "title": "Category"
            },
            {
                "field": "Male",
                "type": "quantitative",
                "title": "Male Athletes"
            },
            {
                "field": "Female",
                "type": "quantitative",
                "title": "Female Athletes"
            }
        ]
    },
    "config": {
        "axis": {
            "labelFontSize": 12,
            "titleFontSize": 16
        }
    },
    "params": [
        {
            "name": "highlight",
            "select": {
                "type": "point",
                "fields": [
                    "Category"
                ]
            },
            "bind": "legend"
        }
    ]
}