{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Medal counts",
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "https://raw.githubusercontent.com/mattuser12/3179/main/worldmap.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    }, 
    
    "transform": [
        {
            "lookup": "noc",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/mattuser12/3179/main/data/Medal%20Count%20Each%20Year.csv"
                },
                "key": "NOC",
                "fields": ["Medal"]
            }
        }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {
            "field": "Medal",
            "type": "quantitative"
        },
        "tooltip": [
            {"field": "noc", "type": "nominal", "title": "Country"},
            {"field": "Medal", "type": "quantitative"}
        ]    
    }
}
    
  
  